!! alexjj Xresources
!! Free to use or modify

! Appearance
urxvt*scrollBar: false
urxvt*transparent: false
urxvt*iconFile:    /home/alex/dotfiles/archlinux-icon-crystal-64.svg
urxvt*depth: 32
urxvt*cursorBlink: true
urxvt*cursorUnderline: true

! Fix sshing into servers
urxvt*termName: rxvt


! Font -----------------------------------------------------------------

urxvt*font: xft:Termsyn:size=10
urxvt*boldFont: xft:Termsyn:size=10

! Xft settings ---------------------------------------------------------

Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight

! Perl extensions ------------------------------------------------------
urxvt*perl-lib: /usr/lib/urxvt/perl/
urxvt*perl-ext-common:  default,matcher,clipboard
urxvt*clipboard.autocopy: true
urxvt*url-launcher: firefox
urxvt*matcher.button: 1

!! Colours -------------------------------------------------------------

*foreground: #D7D0C7
*background: #151515

