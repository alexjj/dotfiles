#
# bspwm hotkeys
#

## Quit
alt + ctrl + Escape
	pkill panel;bspc quit

## Close window
alt + q
	bspc window -c

## Toggle layout between monocle and tiled
alt + t
	bspc desktop -l next

## Balance in size the desktop/workspace
alt + b
	bspc desktop -B

## Toggle floating or fullscreen
alt + {s,f}
	bspc window -t {floating,fullscreen}

## Toggle last focused windows or workspace/desktop
alt + {grave,Tab}
	bspc {window,desktop} -f last

## 
alt + apostrophe
	bspc window -s last

## 
alt + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

## 
alt + y
	bspc window -w last.manual

## Move selected window to biggest window
alt + m
	bspc window -s biggest

## Focus or move window left,down,up,right
alt + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

## Focus window next or prev
alt + {_,shift + }c
	bspc window -f {next,prev}

## Circulate leaves of the tree backward or forward
alt + {comma,period}
	bspc desktop -C {backward,forward}

## Move to left,right desktop
alt + bracket{left,right}
	bspc desktop -f {prev,next}

## Resize the window by pushing
alt + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

## Cancels a cut
alt + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

## Sets the split ratio
alt + ctrl + {1-9}
	bspc window -r 0.{1-9}

## Focus the given desktop or move a window to a given desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

## Set window focus by mouse cursor
~button1
	bspc pointer -g focus

## Use mouse to move,resize side,resize corner with button
alt + button{1-3}
	; bspc pointer -g {move,resize_side,resize_corner}

## U 
alt + @button{1-3}
	bspc pointer -u

# Change window gap
ctrl + alt + {minus,equal}
        bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

#
# wm independent hotkeys
#

alt + Return
	urxvt

alt + space
	dmenu_run

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd
